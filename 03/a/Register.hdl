/**
 * 16-bit register.
 * If load[t]=1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    Mux16(a=preoutput,b=in,sel=load,out=out1);
    DFF16(in=out1,out=preoutput);
    Or16(a=preoutput,b=preoutput,out=out);
}


